# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/bustbrain

# Airtable OAuth Configuration
AIRTABLE_CLIENT_ID=your_airtable_client_id
AIRTABLE_CLIENT_SECRET=your_airtable_client_secret
AIRTABLE_REDIRECT_URI=http://localhost:5001/api/auth/airtable/callback
AIRTABLE_SCOPE=data.records:read data.records:write schema.bases:read schema.bases:write

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Session Secret
SESSION_SECRET=your_random_session_secret_here

# Webhook Secret (for verifying Airtable webhooks)
WEBHOOK_SECRET=your_webhook_secret_here

